<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Movium</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@700&display=swap" rel="stylesheet">
</head>
<body>
    <nav class="navbar navbar-expand-lg bg-body-tertiary" style="padding-top: 0">
        <div class="container-fluid" style="background-color: grey; height:4rem">
          <a class="navbar-brand" href="/" style="font-size: 2em;margin-left: 3rem; font-family: 'Montserrat', sans-serif;color:color-mix(in srgb, #34c9eb 20%, white)">Movium</a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNav" style="justify-content: flex-end;">
            <ul class="navbar-nav" style="gap: 1rem;margin-right:1rem;font-size:1.3em">
            <% if (!username) { %>
                <li class="nav-item">
                  <a class="nav-link" href="/register">Register</a>
                </li>
            <% } %>
            <% if (user) { %>
                <li class="nav-item">
                  <a class="nav-link" href="/profile/<%= user.Profile === null ? 'add' : user.Profile.id %>"><%= username %></a>
                </li>
            <% } %>
              <li class="nav-item">
                <a class="nav-link" href="<%= username ? '/logout' : '/login' %>"><%= username ? 'Logout' : 'Login' %></a>
              </li>
            </ul>
          </div>
        </div>
      </nav>

    <h1>The Movies:</h1>
    <br><br>

    <form action="/movies">
        <div style="margin-left: 4rem">
            <label for="">Search your movie</label>
            <input type="text" name="search">
            <button type="submit" style="border:none; background-color:black; color:white; border-radius:4px;padding: 4px 4px">Submit</button>
        </div>
    </form>
    
    <table class="table" style="margin: 2rem 1rem; gap: 2rem">
        <thead>
            <tr style="text-align: center;">
                <th>Movie Image</th>
                <th>Movie Name</th>
                <th>Movie Description</th>
                <th>Movie Rating</th>
                <th>Genres</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            <% movies.forEach(el => { %>
             <tr style="text-align: center;">
                <td><img src="<%= el.movieImg %>" alt="Movie pic" style="width:360px;height:240px"></td>
                <td><%= el.movieName %></td>
                <td style="width: 360px"><%= el.movieDescription %></td>
                <td><%= el.realMovieRating %></td>
                <td>
                <% el.Genres.forEach(el => { %>
                 <%= el.genreName %>
                <% }) %>
                </td>
                <td>
                    <a href="/movies/add/<%= el.id %>"><button>Mark as watched</button></a>
                </td>
             </tr>
            <% }) %>
        </tbody>
    </table>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
</body>
</html>